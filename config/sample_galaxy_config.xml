<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>postgres</dbtype>
    <driver>org.postgresql.Driver</driver>
    <DBUrl>jdbc:postgresql://localhost:5432/voter</DBUrl>
    <username>tester</username>
    <password>xxx</password>
    <isolation>TRANSACTION_REPEATABLE_READ</isolation>

    <scalefactor>1</scalefactor>

    <!-- The workload -->
    <terminals>10</terminals>
    <works>
        <work>
          <time>300</time>
          <rate>10000</rate>
          <weights>100,100,100</weights>
          <serial>false</serial>
        </work>
    </works>

    <!-- Voter Procedures declaration -->
    <transactiontypes>
        <transactiontype>
                <name>Move</name>
        </transactiontype>
        <transactiontype>
                <name>Combat</name>
        </transactiontype>
        <transactiontype>
                <name>Idle</name>
        </transactiontype>
    </transactiontypes>
</parameters>
